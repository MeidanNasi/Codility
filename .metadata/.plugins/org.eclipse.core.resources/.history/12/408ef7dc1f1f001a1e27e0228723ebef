package lesson_9_maxSliceProblem;

public class maxProfit {
	public int solution(int[] A) {

        int min = Integer.MAX_VALUE;
        int max = 0;
        
        for(int i = 0 ; i < A.length ; i++ ){
            min = A[i] < min ? A[i]:min;
            max = A[i] - min > max ? A[i] - min : max;
        }
        return max;
	}
}
