package lesson_1;

class Solution {
    public int solution(int N) {
    	String s = Integer.toBinaryString(N);
    	int res = 0;
    	int max = 0;
    	int tmp =0;
    	for(int i=0; i<s.length(); i++) {
    		if(s.charAt(i) == 1) {
    			for(int j=i+1; j<s.length(); j++) {
    				if(s.charAt(j) ==0) {
    					tmp++;
    				}
    				else {
    					if(tmp > max) max = tmp;
    					break;
    				}
    			}
    		}
    	}
    	return max;
    }
}