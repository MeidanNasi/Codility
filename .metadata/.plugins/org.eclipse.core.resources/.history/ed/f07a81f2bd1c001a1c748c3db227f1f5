package lesson_1;

class Solution {
    public int solution(int N) {
    	
    	String s = Integer.toBinaryString(N);
    	int max = 0;
    	int tmp =0;
    	boolean flag = false;
    	
    	for(int i=0; i<s.length(); i++) {
    		if(s.charAt(i) == '1') {
    			for(int j=i+1; j<s.length(); j++) {
    				if(s.charAt(j) ==0) {
    					tmp++;
    				}
    				else {
    					flag = true;
    					if(tmp > max) max = tmp;
    					break;
    				}
    			}
    		}
    	}
    	if(flag && max !=0) return max;
    	return 0;
    }
}