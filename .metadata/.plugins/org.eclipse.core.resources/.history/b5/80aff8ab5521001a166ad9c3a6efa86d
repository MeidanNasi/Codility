package lesson_16_greedyAlgorithms;

public class Ropes {
	public int solution(int K, int[] A) {

		int counter = 0;
		int sum = 0;
		for (int a : A) {
			if (a < K) {
				sum += a;
			}
			if (sum >= K) {
				counter++;
				sum = 0;
			}
			if (a >= K) {
				counter++;
			}
		}

		return counter;
	}
}
